{
  "name": "lintbase",
  "private": true,
  "description": "LintBase workspace root.",
  "scripts": {
    "lint": "npm-run-all \"lint:*\"",
    "lint:deps": "check-dependency-version-consistency --ignore-dep @lintbase/downloader",
    "lint:deps:fix": "check-dependency-version-consistency --fix",
    "lint:package-json": "npmPkgJsonLint .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Bryan Mishkin",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "check-dependency-version-consistency": "^4.0.0",
    "npm-package-json-lint": "^6.4.0",
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
